{
  "compilerOptions": {
  "target": "ES2020",
  "module": "ES2020",
  "moduleResolution": "node",
  "lib": ["ES2020"],
  "outDir": "./dist",
  "rootDir": "./",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "core/**/*",
    "agents/**/*",
    "plugins/**/*",
    "ui/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "sandbox",
    "models",
    "extensions"
  ]
}
